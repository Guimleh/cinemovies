{% extends 'base.html.twig' %}

{% block title %}Hello FicheController!{% endblock %}

{% block body %}
{% if movie.mark < 5 %}
    <span class="badge bg-danger">
{% else %}
    <span class="badge bg-success">
{% endif %}
    {{movie.mark}}/10
    </span>
<h5 class="card-title">{{ movie.name }}</h5>

<p class="card-text">{{ movie.plot }}</p>
<p class="card-text"><small class="text-muted">Nombre de votes : {{ movie.nbVotes}}</small></p>
<img src="..." class="card-img-bottom" alt="...">

<!-- Button trigger modal -->
<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Supprimer {{movie.name}}
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Supprimer {{ movie.name }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="#" method="post">
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Mot de passe admin. :</label>
                <input type="password" class="form-control" id="exampleInputPassword1" name ="mdp">
            </div>
            
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            <button type="submit" class="btn btn-primary">Confirmer</button>
            </div>
        </form>
      </div>
      
    </div>
  </div>
</div>
{% endblock %}
